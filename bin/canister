#!/usr/bin/env bash
OUT=$(mktemp)
ERR=$(mktemp)
call_type=$1
canister_id=$2
method=$3
arg=$4
shift
icx $ICX_OPT $PEM_OPT $IC "$call_type" $DID_OPT "$canister_id" "$method" $ICX_ARG_OPT "$arg" 1> $OUT 2> $ERR

if [[ "$?" = 0 ]]; then
  cat $OUT
  rm $OUT
else
  cat $ERR | \
    awk '(/^  Content:/ && ORS=" ") { "echo " $2 " | xxd -r -p" | getline result; print "  " $1 " " result "\n"; next } {print}' > /dev/stderr
  rm $ERR
  exit 1
fi
